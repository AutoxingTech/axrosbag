{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "catkin_make",
			"args": [
				"-DCMAKE_BUILD_TYPE=Debug",
				"-DCMAKE_C_COMPILER=/usr/bin/clang",
				"-DCMAKE_CXX_COMPILER=/usr/bin/clang++",
				"--directory",
				"${workspaceFolder}/../..",
			],
			"problemMatcher": [
				"$catkin-gcc"
			],
			"group": {
				"isDefault": true,
				"kind": "build"
			},
			"label": "catkin_make: build"
		}
	]
}